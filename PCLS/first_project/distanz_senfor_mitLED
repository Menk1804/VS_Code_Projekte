# Example using PWM to fade an LED
import time
from machine import Pin, PWM

# Attach the LED socket kit with an LED to port 16.
# For this port, construct the PWM object.
pin = Pin(16, Pin.OUT)
pwm = PWM(pin)

# Set the PWM frequency.
pwm.freq(1000)

# Fade the LED in and out a few times.
duty = 0
direction = 1
n_blinks = 10

# Faded blinking.
for _ in range(n_blinks * 2 * 256):
    duty += direction
    if duty > 255:
        duty = 255
        direction = -1
    elif duty < 0:
        duty = 0
        direction = 1
    pwm.duty_u16(duty * duty)
    time.sleep(0.001)
